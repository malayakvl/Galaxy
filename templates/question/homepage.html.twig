{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron-img jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Your Questions Answered</h1>
        <p class="lead">And even answers for those questions you didn't think to ask!</p>
    </div>
</div>
<div class="container">
    <form action="{{ path('app_homepage') }}" method="post">
        <div class="row mb-1">
            <div class="col form-group">
                <input class="form-control mb-2" type="text" name="txtQuestionTitle" placeholder="Question Title!" required>
                <textarea class="form-control" rows="2" name="txtQuestion" placeholder="Type your question here!" required></textarea>
            </div>
        </div>
        <div class="row mb-3 pl-3">
            <button class="btn btn-question pt-78">Post Question!</button>
        </div>
    </form>

{#    {% for question in questions %}#}
{#        <li>{{question.QuestionText}}</li>#}
{#    {% endfor %}#}

    <div class="row">
        {% for question in questions %}
            <div class="col-12">
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="q-container p-4">
                        <div class="row">
                            <div class="col-2 text-center">
                                <img src="{{ asset('images/tisha.png') }}" width="100" height="100">
                                <div class="d-block mt-3 vote-arrows">
                                    <a class="vote-up" href="#"><i class="far fa-arrow-alt-circle-up"></i></a>
                                    <a class="vote-down" href="#"><i class="far fa-arrow-alt-circle-down"></i></a>
                                </div>
                            </div>
                            <div class="col">
                                <a class="q-title" href="{{ path('app_question_show', { slug:  question.id  }) }}"><h2>
                                    {{question.QuestionTitle}}</h2></a>
                                <div class="q-display p-3">
                                    <i class="fa fa-quote-left mr-3"></i>
                                    <p class="d-inline">{{ question.QuestionText }}</p>
                                    <p class="pt-4"><strong>Asked By: {{ question.author.username}}</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>

{#                    {% if question.answers|length > 0  %} disabled="disabled"  {% endif %}#}
                    <a class="answer-link" href="{{ path('app_question_show', { slug:  question.id  }) }}" style="color: #fff;">
                        <p class="q-display-response text-center p-3">
                            <i class="fa fa-magic magic-wand"></i>  {{ question.answers|length }} answers
                        </p>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

