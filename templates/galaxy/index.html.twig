{% extends 'base.html.twig' %}

{% block title %}Hello GalaxyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Unique Stars in Galaxies âœ…</h1>

    <div class="row">
        {% if uniqueStars|length != 0  %}
            <div class="col-12">
                <ul>
                {% for star in uniqueStars %}
                    <li>{{star.name}} [Volume: {{ star.volume }}}</li>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
